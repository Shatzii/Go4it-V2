# Go4it Sports GPT - Enhanced Automation Environment Configuration
# Copy this to .env.local and fill in your actual API keys

# ============================================================================
# AI & ML SERVICES
# ============================================================================

# OpenAI API (Primary AI Provider)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-org-id-here

# Hugging Face (Secondary AI Models)
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here

# Anthropic Claude (Alternative AI Provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================================================
# COMMUNICATION & NOTIFICATION
# ============================================================================

# SendGrid (Email Service)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@go4itsports.org
SENDGRID_FROM_NAME="Go4it Sports Academy"

# Twilio (SMS Service)
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack (Team Communication)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WORKSPACE_ID=your-slack-workspace-id

# Discord (Community Communication - Optional)
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-server-id

# ============================================================================
# PAYMENT & COMMERCE
# ============================================================================

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal (Alternative Payment - Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ============================================================================
# CRM & MARKETING AUTOMATION
# ============================================================================

# Odoo (CRM System)
ODOO_URL=https://crm.go4itsports.org
ODOO_DB=go4it_prod
ODOO_USERNAME=your-odoo-username
ODOO_PASSWORD=your-odoo-password
ODOO_API_KEY=your-odoo-api-key

# Mautic (Marketing Automation)
MAUTIC_URL=https://mautic.go4itsports.org
MAUTIC_USERNAME=your-mautic-username
MAUTIC_PASSWORD=your-mautic-password

# HubSpot (CRM Alternative - Optional)
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# ============================================================================
# CALENDAR & SCHEDULING
# ============================================================================

# Cal.com (Appointment Scheduling)
CAL_API_KEY=cal_your-cal-api-key
CAL_WEBHOOK_SECRET=your-cal-webhook-secret

# Google Calendar (Integration)
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GOOGLE_CALENDAR_REFRESH_TOKEN=your-google-calendar-refresh-token

# ============================================================================
# DATABASE & STORAGE
# ============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://go4it_user:go4it_password@localhost:5432/go4it_prod

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Elasticsearch (Search & Analytics)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

# MinIO/S3 (File Storage)
S3_ACCESS_KEY=go4it_admin
S3_SECRET_KEY=go4it_minio_2025
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=go4it-assets

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Google Analytics
GA_TRACKING_ID=GA-YOUR-TRACKING-ID
GA_API_SECRET=your-ga-api-secret

# Mixpanel (Product Analytics)
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# DataDog (Infrastructure Monitoring - Optional)
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key

# ============================================================================
# SOCIAL MEDIA & CONTENT
# ============================================================================

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================================================
# DEVELOPMENT & DEPLOYMENT
# ============================================================================

# GitHub (CI/CD)
GITHUB_TOKEN=github_pat_your-token-here
GITHUB_REPOSITORY=Shatzii/Go4it-V2

# Vercel (Deployment)
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-vercel-project-id

# Docker Registry
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password
DOCKER_REGISTRY=docker.io

# ============================================================================
# SECURITY & COMPLIANCE
# ============================================================================

# JWT Secret (for API authentication)
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRES_IN=24h

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
SIGNING_KEY=your-64-character-signing-key

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Zoom (Video Conferencing)
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_WEBHOOK_SECRET=your-zoom-webhook-secret

# Zapier (Workflow Automation - Alternative to n8n)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-id/

# IFTTT (Simple Automation)
IFTTT_WEBHOOK_KEY=your-ifttt-webhook-key

# ============================================================================
# FEATURE FLAGS & CONFIGURATION
# ============================================================================

# AI Features
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_AI_INSIGHTS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_AUTOMATED_TRANSLATION=true

# Automation Features
ENABLE_LEAD_NURTURE=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_SOCIAL_POSTING=true
ENABLE_REPORT_GENERATION=true

# Compliance Features
ENABLE_GUARDIAN_MODE=true
ENABLE_COMPLIANCE_CHECKING=true
ENABLE_AUDIT_LOGGING=true

# Performance Features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_CDN=true

# ============================================================================
# MONITORING & ALERTS
# ============================================================================

# Alert Webhooks
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/webhook/id/token

# Health Check URLs
HEALTH_CHECK_URL=https://go4itsports.org/api/health
UPTIME_MONITOR_URL=https://uptime.betterstack.com/api/v1/heartbeat/your-heartbeat-id

# ============================================================================
# RATE LIMITING & PERFORMANCE
# ============================================================================

# API Rate Limits
OPENAI_RATE_LIMIT=1000
HUGGINGFACE_RATE_LIMIT=5000
SENDGRID_RATE_LIMIT=10000

# Cache Settings
CACHE_TTL_SECONDS=3600
REDIS_MAX_MEMORY=512mb

# Performance Thresholds
API_RESPONSE_TIME_THRESHOLD=2000
ERROR_RATE_THRESHOLD=0.05