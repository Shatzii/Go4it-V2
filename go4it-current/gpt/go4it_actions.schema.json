{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://go4itsports.org/gpt/go4it_actions.schema.json",
  "title": "Go4it Sports GPT â€“ Pro Action Map Schema",
  "type": "object",
  "required": ["meta", "brand", "actions"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "version", "last_updated", "mirrors"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z0-9\\-]+$" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "channel": { "type": "string" },
        "author": { "type": "string" },
        "last_updated": { "type": "string" },
        "homepage": { "type": "string" },
        "repository": { "type": "string" },
        "documentation": { "type": "string" },
        "description": { "type": "string" },
        "cache": { "type": "object" },
        "mirrors": {
          "type": "object",
          "required": ["primary", "github_raw", "versioned"],
          "properties": {
            "primary": { "type": "string" },
            "github_raw": { "type": "string" },
            "versioned": { "type": "string" }
          }
        }
      }
    },
    "brand": {
      "type": "object",
      "required": ["name", "tagline", "contacts", "truth_in_marketing"],
      "properties": {
        "name": { "type": "string" },
        "tagline": { "type": "string" },
        "contacts": { "type": "object" },
        "locations": { "type": "array", "items": { "type": "string" } },
        "palette": { "type": "object" },
        "truth_in_marketing": { "type": "string" }
      }
    },
    "open_source_stack": { "type": "object" },
    "lead_funnel_stages": { "type": "object" },
    "knowledge_sources": { "type": "object" },
    "event_templates": { "type": "object" },
    "system_status": { "type": "object" },
    "pricing": { "type": "object" },
    "kpi_targets": { "type": "object" },
    "sales_kpi_targets": { "type": "object" },
    "compliance_policies": { "type": "object" },
    "localization": { "type": "object" },
    "model_settings": { "type": "object" },
    "voice_presets": { "type": "object" },
    "guardian_mode": { "type": "object" },
    "integrations": { "type": "object" },
    "soccer_specific_messaging": { "type": "object" },
    "sales_automation_workflows": { "type": "object" },
    "action_roles": { "type": "object" },
    "self_update": { "type": "object" },
    "testing": { "type": "object" },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "category", "description", "input_schema"],
        "properties": {
          "name": { "type": "string", "pattern": "^\\/" },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "input_schema": { "type": "object" }
        }
      }
    }
  },
  "additionalProperties": true
}