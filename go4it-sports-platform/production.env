# Production Environment Configuration for go4itsports.org
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/go4itsports_prod

# Session Security
SESSION_SECRET=your-production-session-secret-key-here

# Domain Configuration
DOMAIN=go4itsports.org
SERVER_IP=167.235.128.41

# CORS Configuration
ALLOWED_ORIGINS=https://go4itsports.org,https://www.go4itsports.org

# SSL/HTTPS Configuration
SSL_ENABLED=true
FORCE_HTTPS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=50mb
UPLOAD_PATH=/var/www/go4itsports/uploads

# API Keys (add your actual keys)
# ANTHROPIC_API_KEY=your-anthropic-key
# OPENAI_API_KEY=your-openai-key
# NOTION_INTEGRATION_SECRET=your-notion-key
# NOTION_PAGE_URL=your-notion-page-url

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=admin@go4itsports.org
# SMTP_PASS=your-email-password

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_ANALYTICS=true