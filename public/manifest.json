    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View performance dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/dashboard-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "StarPath",
      "short_name": "StarPath",
      "description": "Track your StarPath progress",
      "url": "/starpath",
      "icons": [
        {
          "src": "/icons/coach-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Recruiting Hub",
      "short_name": "Recruiting",
      "description": "Manage recruiting communications",
      "url": "/recruiting-hub",
      "icons": [
        {
          "src": "/icons/coach-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/gar-upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+go4itsports",
      "url": "/gar-upload?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/gar-upload",
      "accept": {
        "video/*": [".mp4", ".mov", ".avi", ".mkv", ".webm"]
      }
    }
  ]
}
