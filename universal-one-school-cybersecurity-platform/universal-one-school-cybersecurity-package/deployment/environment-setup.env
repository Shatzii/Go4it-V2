# Universal One School Cybersecurity Platform - Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/universal_one_school"
PGHOST="localhost"
PGPORT="5432"
PGDATABASE="universal_one_school"
PGUSER="postgres"
PGPASSWORD="your_password_here"

# Security Configuration
JWT_SECRET="your-256-bit-secret-key-here"
JWT_REFRESH_SECRET="your-refresh-secret-key-here"
ENCRYPTION_KEY="your-aes-256-encryption-key-here"
SESSION_SECRET="your-session-secret-here"

# API Keys for External Services
ANTHROPIC_API_KEY="your-anthropic-api-key-for-ai-analysis"

# Optional: Communication Services
SLACK_BOT_TOKEN="your-slack-bot-token-for-alerts"
SLACK_CHANNEL_ID="your-slack-channel-id"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Platform Configuration
NODE_ENV="production"
PORT="5000"
VITE_API_URL="http://localhost:5000"

# School Configuration
SCHOOL_CONFIGS_ENABLED="true"
COPPA_COMPLIANCE_ENABLED="true"
FERPA_COMPLIANCE_ENABLED="true"
GDPR_COMPLIANCE_ENABLED="true"

# Emergency Response
EMERGENCY_RESPONSE_ENABLED="true"
LAW_ENFORCEMENT_INTEGRATION="true"
PARENT_NOTIFICATION_ENABLED="true"

# Social Media Monitoring
SOCIAL_MEDIA_MONITORING_ENABLED="true"
PREDATOR_DETECTION_ENABLED="true"
CYBERBULLYING_DETECTION_ENABLED="true"
CONTENT_ANALYSIS_ENABLED="true"

# Security Monitoring
THREAT_DETECTION_ENABLED="true"
REAL_TIME_MONITORING="true"
AUTOMATED_RESPONSE="true"
AUDIT_LOGGING="true"