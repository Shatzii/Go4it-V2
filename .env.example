# Universal One School - Environment Variables Template
# Copy this to .env and fill in your actual values

# Production Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain Configuration
RAILWAY_STATIC_URL=https://school.shatzii.com
NEXT_PUBLIC_API_URL=https://school.shatzii.com
NEXTAUTH_URL=https://school.shatzii.com

# AI Engine Configuration
USE_LOCAL_AI_ENGINE=true
USE_SELF_HOSTED_AI=true
AI_ENGINE_URL=http://localhost:8000
LOCAL_AI_ENGINE_URL=http://localhost:8000
AI_FALLBACK_TO_CLOUD=true
AI_LOCAL_PREFERENCE=true
AI_CLOUD_COMPLEX_ONLY=false

# API Keys (Required - Add your actual keys)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database (Railway provides automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Security (Generate secure random strings)
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters

# School Configuration
SCHOOL_NAME=Universal One School
ADMIN_EMAIL=admin@school.shatzii.com
SUPPORT_EMAIL=support@school.shatzii.com

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/tmp/uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
HOTJAR_ID=your_hotjar_id

# Feature Flags
ENABLE_VR_FEATURES=true
ENABLE_AI_TUTORING=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_PARENT_PORTAL=true

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info