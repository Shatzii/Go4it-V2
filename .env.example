# Go4It Sports Platform - Environment Variables Template
# Copy this file to .env.local for development or configure in production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/go4it_sports
PGHOST=localhost
PGPORT=5432
PGDATABASE=go4it_sports
PGUSER=your_db_user
PGPASSWORD=your_db_password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
SESSION_SECRET=your-session-secret-key-for-cookies

# Stripe Payment Integration (Required for payment functionality)
STRIPE_SECRET_KEY=sk_test_...  # Use sk_live_... for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...  # Use pk_live_... for production

# AI Integration
OPENAI_API_KEY=sk-your-openai-api-key
ELEVENLABS_AGENT_ID=tb80F0KNyKEjO8IymYOU

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:5000  # Change to your production domain
NODE_ENV=development  # Set to 'production' for production deployment

# Optional: Additional Services
# GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key