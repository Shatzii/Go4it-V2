# Additional Environment Variables for Parent Night Funnel

# ============================================
# Cal.com Integration
# ============================================
CAL_TOKEN="your-cal-api-token"

# Meeting Room URLs (Jitsi or similar)
PN_EU_URL="https://meet.go4itsports.org/parent-night-eu"
PN_US_URL="https://meet.go4itsports.org/parent-night-us"
ONBOARD_EU_URL="https://meet.go4itsports.org/onboarding-eu"
ONBOARD_US_URL="https://meet.go4itsports.org/onboarding-us"

# Cal.com Event Type Slugs (create these in Cal.com)
# Format: username/event-slug or team/event-slug
PARENT_NIGHT_INFO_EU="go4it/parent-night-info-eu"
PARENT_NIGHT_INFO_US="go4it/parent-night-info-us"
PARENT_NIGHT_DECISION_EU="go4it/parent-night-decision-eu"
PARENT_NIGHT_DECISION_US="go4it/parent-night-decision-us"
ONBOARDING_EU="go4it/onboarding-eu"
ONBOARDING_US="go4it/onboarding-us"

# Webhook Secret (verify incoming webhooks from Cal.com)
CAL_WEBHOOK_SECRET="your-webhook-secret"

# ============================================
# Listmonk Email Platform
# ============================================
LISTMONK_URL="https://listmonk.yourdomain.com"
LISTMONK_API_KEY="your-listmonk-api-key"

# Listmonk Template IDs (create templates first)
LISTMONK_TEMPLATE_CONFIRM_ID="1"
LISTMONK_TEMPLATE_THURSDAY_ID="2"
LISTMONK_TEMPLATE_AUDIT_ID="3"
LISTMONK_TEMPLATE_ONBOARD_ID="4"
LISTMONK_TEMPLATE_SMS_ID="5"

# Listmonk List IDs
LISTMONK_LIST_ID="1"

# ============================================
# Kutt URL Shortener
# ============================================
KUTT_URL="https://kutt.it"
KUTT_API_KEY="your-kutt-api-key"
KUTT_DOMAIN="go.go4itsports.org"

# ============================================
# PostHog Analytics
# ============================================
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-project-key"

# ============================================
# n8n Automation (optional - if self-hosting)
# ============================================
N8N_BASE_URL="https://n8n.yourdomain.com"
N8N_API_KEY="your-n8n-api-key"

# ============================================
# Slack Notifications (optional)
# ============================================
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# ============================================
# Feature Flags (Enable Parent Night Funnel)
# ============================================
NEXT_PUBLIC_FEATURE_PARENT_NIGHT_PAGE="true"
NEXT_PUBLIC_FEATURE_NEW_HERO="true"
NEXT_PUBLIC_FEATURE_JSONLD="true"

# ============================================
# Base URL (for webhooks and ICS links)
# ============================================
BASE_URL="https://go4itsports.org"
