[Unit]
Description=Go4It Sports Application
After=network.target postgresql.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/go4it
ExecStart=/usr/bin/node production-server.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=go4it-sports
Environment=NODE_ENV=production PORT=81 SERVER_HOST=localhost DOMAIN=go4itsports.org BASE_URL=https://go4itsports.org

[Install]
WantedBy=multi-user.target