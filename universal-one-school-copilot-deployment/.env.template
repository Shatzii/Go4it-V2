# Universal One School - Production Environment Template
# Copy this file to .env.local and fill in your actual values

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://schools.shatzii.com
PORT=3000

# AI API Keys (Required for core functionality)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database

# Security Settings (Required)
SESSION_SECRET=your_very_secure_session_secret_at_least_32_characters_long

# Optional Services
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Server Configuration
WORKERS=4
MEMORY_LIMIT=2048

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/schools.shatzii.com.crt
SSL_KEY_PATH=/etc/ssl/private/schools.shatzii.com.key