# Universal One School - Environment Variables Template

# AI Service API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database (Optional - uses in-memory storage by default)
DATABASE_URL=postgresql://username:password@localhost:5432/universal_one_school

# Session Security (Required)
SESSION_SECRET=your_secure_session_secret_here

# Application Settings
NODE_ENV=production
PORT=5000

# Optional Services
SENDGRID_API_KEY=your_sendgrid_key_for_emails
STRIPE_SECRET_KEY=your_stripe_key_for_payments
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key

# Google Analytics (Optional)
VITE_GA_MEASUREMENT_ID=your_google_analytics_id

# Replit Specific (Auto-configured on Replit)
REPLIT_DOMAINS=your-repl-domain.replit.dev
REPL_ID=your-replit-id
