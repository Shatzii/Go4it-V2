# Sports Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/sports_platform
USE_MEMORY_STORAGE=false

# ==========================================
# AI/ML SERVICE CREDENTIALS
# ==========================================
# Anthropic API for AI-powered features
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API for additional AI features
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
# JWT Secret for token signing (generate with: openssl rand -hex 32)
JWT_SECRET=your_secure_jwt_secret_key_here

# Session encryption key
SESSION_SECRET=your_session_encryption_key_here

# Password hashing salt rounds (12-15 recommended)
BCRYPT_SALT_ROUNDS=12

# ==========================================
# ADMIN CREDENTIALS (Change in Production!)
# ==========================================
# Master Admin Credentials
MASTER_ADMIN_USERNAME=spacepharaoh
MASTER_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# School Admin Credentials
SUPERHERO_ADMIN_USERNAME=hero_admin
SUPERHERO_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
STAGE_ADMIN_USERNAME=stage_admin
STAGE_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
LAW_ADMIN_USERNAME=law_admin
LAW_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
LANGUAGE_ADMIN_USERNAME=language_admin
LANGUAGE_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Demo User Password
DEMO_USER_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Demo Admin and Student Credentials
DEMO_ADMIN_USERNAME=admin
DEMO_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
DEMO_STUDENT_USERNAME=student
DEMO_STUDENT_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Audit and Security
AUDIT_LOG_MASK=********
ALLOWED_ORIGINS=http://localhost:5000,https://go4itsports.org
CORS_CREDENTIALS=true

# ==========================================
# EMAIL SERVICES
# ==========================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password_here

# ==========================================
# EXTERNAL APIS & SERVICES
# ==========================================
# Sports data APIs
SPORTS_API_KEY=your_sports_api_key_here
RECRUITING_API_KEY=your_recruiting_api_key_here

# Video processing services
VIDEO_PROCESSING_API_KEY=your_video_api_key_here

# Cloud storage credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_s3_bucket_name

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================
# Environment mode
NODE_ENV=development

# API Base URLs
API_BASE_URL=http://localhost:5000
CLIENT_URL=http://localhost:5000

# Enable debug logging
DEBUG_MODE=true

# ==========================================
# PRODUCTION SETTINGS
# ==========================================
# Production domain
PRODUCTION_DOMAIN=go4itsports.org

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Redis cache (if using)
REDIS_URL=redis://localhost:6379

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Error tracking service
SENTRY_DSN=your_sentry_dsn_here

# Analytics tracking
GOOGLE_ANALYTICS_ID=your_ga_tracking_id_here

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# ==========================================
# LICENSING & COMPLIANCE
# ==========================================
# License validation
LICENSE_VALIDATION_KEY=your_license_validation_key_here
HARDWARE_BINDING_SECRET=your_hardware_binding_secret_here

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_ANALYSIS=true
ENABLE_RECRUITING_TOOLS=true
ENABLE_WELLNESS_TRACKING=true

# ==========================================
# EXTERNAL INTEGRATIONS
# ==========================================
# Social media APIs
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
INSTAGRAM_API_KEY=your_instagram_api_key_here

# Payment processing
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here