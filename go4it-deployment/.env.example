# External APIs
ELEVENLABS_API_KEY="your_elevenlabs_api_key_here"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:5000"
COOKIE_DOMAIN=".your-domain.com" # optional, set in production

# Optional: Upstash Redis REST (for rate limiting in production)
UPSTASH_REDIS_REST_URL="https://us1-dynamic-your.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-rest-token"

# Optional: Email and Captcha
RESEND_API_KEY="re_your_resend_api_key"
