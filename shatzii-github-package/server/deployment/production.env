# Production Environment Configuration for shatzii.com
NODE_ENV=production
PORT=5000

# Domain Configuration
DOMAIN=shatzii.com
BASE_URL=https://shatzii.com

# Self-Hosted AI Configuration
LOCAL_AI_MODE=true
USE_LOCAL_MODELS=true
SELF_HOSTED=true

# Database Configuration (Production)
DATABASE_URL=postgresql://shatzii_user:CHANGE_THIS_PASSWORD@localhost:5432/shatzii_production
PGHOST=localhost
PGPORT=5432
PGUSER=shatzii_user
PGPASSWORD=CHANGE_THIS_PASSWORD
PGDATABASE=shatzii_production

# Security Configuration
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_HERE
SESSION_SECRET=GENERATE_SECURE_SESSION_SECRET_HERE

# AI Model Endpoints
OLLAMA_BASE_URL=http://localhost:11434
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@shatzii.com
SMTP_PASS=YOUR_EMAIL_APP_PASSWORD

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_LEVEL=info
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING

# Business Configuration
COMPANY_NAME=Shatzii
COMPANY_DOMAIN=shatzii.com
ADMIN_EMAIL=admin@shatzii.com
SUPPORT_EMAIL=support@shatzii.com

# Payment Configuration (if needed)
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# AI Agent Configuration
MAX_CONCURRENT_OPERATIONS=50
LEAD_GENERATION_INTERVAL=300000
CAMPAIGN_EXECUTION_INTERVAL=600000
SALES_FOLLOWUP_INTERVAL=900000

# Performance Optimization
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=32